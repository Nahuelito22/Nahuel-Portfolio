---
// src/components/ProjectCard.astro
export interface Props {
  title: string;
  description: string;
  tags: string[];
  link?: string;
  github?: string;
  image?: string; // Opcional, si no hay imagen usa un color
  category: string; // Para el filtro
}

const { title, description, tags, link, github, image, category } = Astro.props;
---

<div class="project-card group relative bg-chess-board border border-white/10 rounded-xl overflow-hidden hover:border-ai-neon/50 transition-all duration-300 transform hover:-translate-y-1" data-category={category}>
  
  <div class="h-48 overflow-hidden relative">
     <div class="absolute inset-0 bg-chess-dark/50 group-hover:bg-transparent transition-all z-10"></div>
    
    {image ? (
      <img src={image} alt={title} class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" />
    ) : (
      <div class="w-full h-full bg-gradient-to-br from-chess-board to-chess-dark flex items-center justify-center">
        <span class="text-4xl">♟️</span>
      </div>
    )}
  </div>

  <div class="p-6">
    <div class="flex justify-between items-start mb-4">
      <div>
        <span class="text-xs font-mono text-ai-neon mb-2 block">{category}</span>
        <h3 class="text-xl font-bold text-white group-hover:text-ai-neon transition-colors">{title}</h3>
      </div>
      <div class="flex gap-3">
        {github && (
          <a href={github} target="_blank" class="text-chess-accent hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
          </a>
        )}
        {link && (
          <a href={link} target="_blank" class="text-chess-accent hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
          </a>
        )}
      </div>
    </div>

    <p class="text-chess-accent text-sm mb-6 line-clamp-3">
      {description}
    </p>

    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="text-xs font-mono px-2 py-1 rounded bg-white/5 text-gray-300 border border-white/5">
          {tag}
        </span>
      ))}
    </div>
  </div>
</div>