---
// src/components/Projects.astro
import ProjectCard from "./ProjectCard.astro";

// AQUÍ ESTÁN TUS PROYECTOS. Edita esto para cambiar textos o links.
const PROJECTS = [
  {
    title: "Nimbus AI",
    description:
      "Sistema avanzado de predicción meteorológica enfocado en la detección de granizo. Utiliza modelos supervisados y enriquecimiento de datasets mediante APIs meteorológicas para análisis de riesgo.",
    tags: ["Python", "Scikit-learn", "Pandas", "API REST"],
    category: "Data Science",
    github: "https://github.com/Nahuelito22/Nimbus-AI",
    link: "https://nimbus-ai-mdz.vercel.app/",
    image: "/projects/nimbus-ai.webp",
  },
  {
    title: "Roque Chess Bot",
    description:
      "Motor de ajedrez basado en redes neuronales LSTM. Entrenado con un corpus masivo de partidas PGN para predecir movimientos humanos y detectar patrones tácticos.",
    tags: ["TensorFlow", "Keras", "Deep Learning", "LSTM"],
    category: "AI & Deep Learning",
    github: "https://github.com/Nahuelito22/Bot_Ajedrez",
    link: "https://nahuelito22.github.io/Bot_Ajedrez/#jugar",
    image: "/projects/roque-chess.webp",
  },
  {
    title: "Guidia",
    description:
      "Asistente de planificación inteligente desarrollado para Hackathon. Genera itinerarios y sugerencias basadas en preferencias del usuario utilizando IA generativa.",
    tags: ["GenAI", "React", "Python"],
    category: "AI & Deep Learning",
    github: "https://github.com/Nahuelito22/Guidia",
    link: "https://guidia.onrender.com/",
    image: "/projects/guidia.webp",
  },
  {
    title: "¿Laburar o Jugar?",
    description:
      "Videojuego desarrollado en Python aplicando conceptos de programación orientada a objetos, gestión de estados y físicas básicas.",
    tags: ["Python", "Pygame", "OOP"],
    category: "Game Dev",
    github: "https://github.com/Nahuelito22/Laburar_o_Jugar",
    link: "https://nahuelito22.itch.io/laburar-o-jugar",
    image: "/projects/laburar-o-jugar.webp", // Placeholder image
  },
  {
    title: "Bodega Manager",
    description:
      "Plataforma web integral para la gestión de stock, ventas y trazabilidad en bodegas. Incluye panel de administración y control de inventario en tiempo real.",
    tags: ["Full Stack", "SQL", "Dashboard"],
    category: "Full Stack",
    github: "https://github.com/Nahuelito22/Gestion_de_bodega",
  },
];
---

<section id="proyectos" class="py-20">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-4xl font-bold text-white mb-8 text-center">
      Proyectos <span class="text-ai-neon">Destacados</span>
    </h2>

    <div class="flex flex-wrap justify-center gap-4 mb-12" id="filters">
      <button
        class="filter-btn active px-4 py-2 rounded-full border border-ai-neon bg-ai-neon/10 text-ai-neon font-mono text-sm transition-all hover:bg-ai-neon hover:text-chess-dark"
        data-filter="all"
      >
        [ All_Systems ]
      </button>
      <button
        class="filter-btn px-4 py-2 rounded-full border border-gray-700 text-gray-400 font-mono text-sm transition-all hover:border-ai-neon hover:text-ai-neon"
        data-filter="Data Science"
      >
        / Data_Science
      </button>
      <button
        class="filter-btn px-4 py-2 rounded-full border border-gray-700 text-gray-400 font-mono text-sm transition-all hover:border-ai-neon hover:text-ai-neon"
        data-filter="AI & Deep Learning"
      >
        / AI_Models
      </button>
      <button
        class="filter-btn px-4 py-2 rounded-full border border-gray-700 text-gray-400 font-mono text-sm transition-all hover:border-ai-neon hover:text-ai-neon"
        data-filter="Full Stack"
      >
        / Full_Stack
      </button>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
      id="projects-grid"
    >
      {PROJECTS.map((project) => <ProjectCard {...project} />)}
    </div>
  </div>
</section>

<script>
  const buttons = document.querySelectorAll(".filter-btn");
  const cards = document.querySelectorAll(".project-card");

  buttons.forEach((btn) => {
    btn.addEventListener("click", () => {
      // Remover clase activa de todos
      buttons.forEach((b) => {
        b.classList.remove("bg-ai-neon/10", "text-ai-neon", "border-ai-neon");
        b.classList.add("text-gray-400", "border-gray-700");
      });
      // Activar el actual
      btn.classList.remove("text-gray-400", "border-gray-700");
      btn.classList.add("bg-ai-neon/10", "text-ai-neon", "border-ai-neon");

      const filter = btn.getAttribute("data-filter");

      cards.forEach((card) => {
        const category = card.getAttribute("data-category");
        if (filter === "all" || category === filter) {
          (card as HTMLElement).style.display = "block";
          // Pequeña animación de entrada
          (card as HTMLElement).style.opacity = "0";
          setTimeout(() => ((card as HTMLElement).style.opacity = "1"), 50);
        } else {
          (card as HTMLElement).style.display = "none";
        }
      });
    });
  });
</script>
