---
// src/components/Skills.astro
import { Icon } from 'astro-icon/components';

const SKILLS = [
  {
    category: "Data Science & AI",
    icon: "mdi:brain", 
    items: [
      { name: "Python", icon: "devicon:python" },
      { name: "Pandas", icon: "devicon:pandas" },
      { name: "NumPy", icon: "devicon:numpy" },
      { name: "Scikit-learn", icon: "devicon:scikitlearn" },
      { name: "TensorFlow", icon: "devicon:tensorflow" },
      { name: "Keras", icon: "devicon:keras" },
      { name: "Matplotlib", icon: "devicon:matplotlib" },
      { name: "NLP", icon: "mdi:comment-text-multiple-outline" },
    ]
  },
  {
    category: "Backend & Systems",
    icon: "mdi:server-network", 
    items: [
      { name: "MySQL", icon: "devicon:mysql" },
      { name: "PostgreSQL", icon: "devicon:postgresql" },
      { name: "FastAPI", icon: "devicon:fastapi" },
      { name: "Flask", icon: "devicon:flask" },
      { name: "Git", icon: "devicon:git" },
      { name: "GitHub", icon: "devicon:github" },
      { name: "Docker", icon: "devicon:docker" },
      { name: "Linux", icon: "devicon:linux" },
    ]
  },
  {
    category: "Frontend & Visualization",
    icon: "mdi:monitor-dashboard", 
    items: [
      { name: "HTML5", icon: "devicon:html5" },
      { name: "CSS3", icon: "devicon:css3" },
      { name: "JavaScript", icon: "devicon:javascript" },
      { name: "React", icon: "devicon:react" },
      { name: "Astro", icon: "devicon:astro" },
      { name: "Tailwind CSS", icon: "devicon:tailwindcss" },
      { name: "Tableau", icon: "mdi:chart-bar" },
    ]
  }
];
---

<section class="py-20 relative z-10"> <div class="max-w-6xl mx-auto px-4">
    
    <h2 class="text-4xl font-bold text-white mb-12 text-center">
      Tech <span class="text-ai-neon">Stack</span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      
      {SKILLS.map((skill) => (
        <div class="bg-chess-board p-8 rounded-2xl border border-white/5 hover:border-ai-neon/40 transition-all group hover:-translate-y-1">
          
          <div class="flex items-center gap-3 mb-6">
            <div class="w-12 h-12 bg-ai-neon/10 rounded-lg flex items-center justify-center text-ai-neon group-hover:scale-110 transition-transform">
               <Icon name={skill.icon} class="w-7 h-7" />
            </div>
            <h3 class="text-xl font-bold text-white">{skill.category}</h3>
          </div>

          <div class="flex flex-wrap gap-2">
            {skill.items.map((item) => (
              <span class="flex items-center gap-2 px-3 py-1 bg-chess-dark text-gray-300 text-sm font-mono border border-white/10 rounded hover:border-ai-neon/50 hover:text-white transition-colors cursor-default">
                <Icon name={item.icon} class="w-4 h-4" />
                {item.name}
              </span>
            ))}
          </div>
          
        </div>
      ))}
      </div>

  </div>
</section>